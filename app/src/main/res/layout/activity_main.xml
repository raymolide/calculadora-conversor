<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conversorTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CC"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Conversão e Calculo"
                android:textSize="25sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/editTextConverter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Digite o numero"
                android:inputType="textPersonName"
                android:textSize="30sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/base1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Indique o tipo de dado inserido"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioRomano1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Romano" />

                <RadioButton
                    android:id="@+id/radioDecimal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decimal" />

            </RadioGroup>

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/txtconversao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONVERSÃO:"
                android:textSize="20sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/resultadoConversao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RESULTADO"
                android:textSize="40sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/btnConverter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="clip_vertical"
                android:text="Converter" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/txtaritmetrica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ARITMETRICA:"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/num1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Num 1"
                    android:inputType="textPersonName"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/num2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Num2"
                    android:inputType="textPersonName"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/base2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Indique o tipo de dado inserido"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radioRomano2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Romano" />

                <RadioButton
                    android:id="@+id/radioDecimal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decimal" />

            </RadioGroup>

            <TextView
                android:id="@+id/resultadoAritmetrica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="RESULTADO"
                android:textSize="40sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/somar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Somar" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/subtrair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtrair" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>